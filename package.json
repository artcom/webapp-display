{
  "name": "webapp-display",
  "private": true,
  "main": "src/main.js",
  "version": "3.3.2",
  "scripts": {
    "package:win": "electron-builder build --win",
    "package:mac": "electron-builder build --mac",
    "package:linux": "electron-builder build --linux",
    "package": "electron-builder build --win --mac --linux",
    "dev": "electron .",
    "lint": "eslint src",
    "start": "electron . --fullscreen"
  },
  "build": {
    "appId": "webapp-player",
    "asar": true,
    "directories": {
      "output": "build"
    },
    "files": [
      "src"
    ],
    "win": {
      "target": [
        "dir"
      ]
    },
    "mac": {
      "target": [
        "dir"
      ]
    },
    "linux": {
      "target": [
        "dir"
      ]
    }
  },
  "engines": {
    "node": "16.13.2"
  },
  "dependencies": {
    "@artcom/bootstrap-client": "^4.3.0",
    "axios": "^0.24.0",
    "lodash.frompairs": "^4.0.1",
    "lodash.kebabcase": "^4.1.1",
    "lodash.omitby": "^4.6.0",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "eslint": "^8.6.0",
    "eslint-config-artcom": "^0.11.1",
    "eslint-plugin-import": "^2.25.4"
  }
}
